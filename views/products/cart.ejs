<%- include('../includes/head.ejs') %>
    <%- include('../includes/navigation.ejs') %>
    <section class="ftco-section ftco-cart">
        <div class="container">
            <div class="row">
            <div class="col-md-12 ftco-animate">
                <div class="cart-list">
                    <table class="table">
                       
                   
                      </table>
                  </div>
            </div>
        </div>
        <table class="table table-bordered text-center">
          <thead>
              <tr>
                  <th>#</th>
                 
                  <th>Product Name</th>
                  <th>Price</th>
                  <th>amount</th>
                
                  <th></th>
              </tr>
          </thead>
          <tbody id="myTable">
              <%let total =0; let cartTotal =0; %>
              <% if (prods.length > 0) { %>

             

                  <% prods.map((product, index) => { %>
                    <% cartTotal = parseInt(product.price)*parseInt(product.amount) %>
                    <% total = total+cartTotal %>
                      <tr>
                          <td>
                              <%- (index+1) %>
                          </td>
                          
                          <td>
                              <%- product.product_name%>
                          </td>
                          <td>
                              <%- product.price%>
                          </td>
                          <td>
                              <%- product.amount%>
                          </td>
                        
                          
                          <td>
                              <a href="<%- '/deleteorder/'+product._id%>" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger"> <i class="fa fa-trash-o" aria-hidden="true"></i> Delete</a>
                          </td>
                      </tr>
                      <% }) %>
                          <% } else { %>
                              <tr>
                                  <td colspan="4">
                                      <h1>No Products Found!</h1>
                                  </td>
                              </tr>
                              <% } %>
          </tbody>
          <h2>ยอดรวม <%= total %></h2>
      </table>
        </div>
    </section>
    
    <%- include('../includes/end.ejs') %>